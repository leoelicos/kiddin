<div class="row">
  <div>
    <h2 class="text-center pt-2 threadtitle"> {{thread.title}}</h2>
  </div>
</div>

<div class="card-container">
  <div class=" card-body row justify-content-center m-2">

    <div class="oldpost card  col-sm-5 p-3 m-2">
      <h2>Latest Post</h2>
      <div class="card-body oldpostbody">
        <h4 class="card-title border-bottom border-secondary border-2">{{posts.[0].title}}</h4>
        <p class="card-text">{{posts.[0].text}}</p>
        <p class="card-text"><small class="text-muted">Posted by {{posts.[0].user.username}}</small></p>

        <img src="{{posts.[0].image_url}}" alt="latest post imsage" class="card-img-bottom" alt="...">
      </div>
    </div>
    <div class="newpost card col-sm-5 p-3 m-2">
      <div>
        <h2> Make a new post</h2>
        <form action="/api/posts/uploads" class="formclass p-2" method="post" enctype="multipart/form-data">

          {{#if isMarketplace}}
          <div class="row">
            <div class="mb-3 col">
              <label class="form-label"> Item</label>
              <input placeholder="Baby nappies..." maxlength="100" class="form-control" type="text" name="title" />
            </div>
            <div class="mb-3 col">
              <label class="form-label">Price</label>
              <input placeholder="$" class="form-control" type="number" step="any" min="0" name="price" />

            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <input placeholder="Describe your item" class="form-control" maxlength="300" type="text" name="text" />
          </div>
          {{else}}
          <div class="mb-3">
            <label class="form-label"> Title</label>
            <input placeholder="Interesting story" maxlength="100" class="form-control" type="text" name="title" />
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <input placeholder="Describe what happened" class="form-control" maxlength="300" type="text" name="text" />

          </div>

          {{/if}}
          <input style="display: none;" type="text" name="threadId" value="{{thread.id}}" />
          <div class="mb-3">
            <label for="formFile" class="form-label">Upload an Image</label>
            <input class="form-control" type="file">
          </div>
          <button type="submit" class="postbtn btn mb-3">Submit</button>
        </form>

      </div>
      <div class="history">
        <h3>Other Posts</h3>
        {{#each posts as |post|}}
        {{>history}}
        {{/each}}
      </div>

    </div>
  </div>
</div>